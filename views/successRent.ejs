<link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
<link rel = 'stylesheet' href="/css/dashboard.css">

<%- include('partials/dashboardHeader') -%>

<style>
    #body {
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #0c0c0c;
}
    #body div {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
        color: black;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1em;
}
#body .button {
    width: 100%;
    padding: 10px;
    background-color: #008080;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px;
    text-align: center;
}
p {
    font-weight: 300;
    font-size: 0.75em;
    margin-bottom: 4em;
}
#body i {
    border: 1px solid white;
    background: #008080;
    border-radius: 50%;
    color: white;
    padding: 10px;
}
@media screen and (max-width: 480px) {
    #body {
        display: block;
        margin: 1em;
    }
}
</style>

<section id = 'body'>
    <div>
        <i class="fa-solid fa-check"></i>
        <h3>You just created your Plan</h3>
        <p>Welldone, <%= username %></p>

        <a href="/goals/6/<%= id %>" class="button">View Plan</a>
    </div>
</section>